<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.praveen.session8assignment1.MainActivity">

    <Button
        android:id="@+id/ascButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="@string/ascButtonText"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/buttonTextColor"
        android:background="@color/buttonBg"/>

    <Button
        android:id="@+id/descButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ascButton"
        android:layout_marginEnd="22dp"
        android:text="@string/descButtonText"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/buttonTextColor"
        android:background="@color/buttonBg"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ascButton"
        android:layout_marginTop="13dp"/>

</RelativeLayout>
